{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "outDir": "./dist",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["dom", "es2017"]
  },
  "include": ["./src", "./types"]
}